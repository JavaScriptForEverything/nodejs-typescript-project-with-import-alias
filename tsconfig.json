{
  "compilerOptions": {
    "baseUrl": "./src",  
    "paths": {
			"@/*": ["./*"]
		}, 
    "rootDir": "./src", 
    "outDir": "./dist",  
    "target": "es2016",  
    // "lib": [],       
    "module": "commonjs",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true, 
    "allowSyntheticDefaultImports": true, 
    "noImplicitAny": true,
    "strictNullChecks": true, 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]

}